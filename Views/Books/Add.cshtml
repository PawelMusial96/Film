@model Film.Models.Book

@{
}

<form class="w-40" asp-action="Add" method="post">
    <h2 class="pb-10">Add Genre</h2>
    <div class="input-container">
        <label asp-for="Tytul" class="w-40">Tytul</label>
        <input type="text" class="input" asp-for="Tytul">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Tytul"> </span>
    </div>

    <div class="input-container">
        <label asp-for="Rezyser" class="w-40">Rezyser</label>
        <input type="text" class="input" asp-for="Rezyser">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Rezyser"> </span>
    </div>

    <div class="input-container">
        <label asp-for="Opis" class="w-40">Title</label>
        <input type="text" class="input" asp-for="Opis">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Opis"> </span>
    </div>

    @if (TempData["msg"] != null)
    {
        <div class="alert mb-1">
            @TempData["msg"]
        </div>
    }

    <div class="input-container">
        <button class="btn btn-default" type="submit">Save</button>
        <a class="btn btn-sec" href="/Genre/GenreList">All records</a>
    </div>
</form>